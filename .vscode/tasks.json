{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build OpenGL Project",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/glad.c",
                // Corrected Include Path:
                "-I${workspaceFolder}/include",
                // ---
                "-o",
                "${workspaceFolder}/main.exe",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: g++.exe"
        }
    ]
}